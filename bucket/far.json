    "architecture": {
        "64bit": {
            "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv3.0.6455.4222/Far.x64.3.0.6455.4222.741e64f156b5da664525d2e5cb9b9d0835f8e057.7z"
        },
        "32bit": {
            "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv3.0.6455.4222/Far.x86.3.0.6455.4222.741e64f156b5da664525d2e5cb9b9d0835f8e057.7z"
        },
        "arm64": {
            "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv3.0.6455.4222/Far.ARM64.3.0.6455.4222.741e64f156b5da664525d2e5cb9b9d0835f8e057.7z"
        }
    },
    "pre_install": [
        "$ini = 'Far.exe.ini'",
        "if (!(Test-Path \"$persist_dir\\$ini\")) {",
        "    Copy-Item \"$dir\\Far.exe.example.ini\" \"$dir\\$ini\"",
        "    (Get-Content \"$dir\\$ini\") -replace ';(UseSystemProfiles=)1', '${1}0' | Set-Content \"$dir\\$ini\" -Encoding Ascii",
        "    # Migrate from system wide configuration",
        "    $env:LOCALAPPDATA, $env:APPDATA | ForEach-Object {",
        "        if (Test-Path \"$_\\Far Manager\") {",
        "            warn \"Copying system wide profile from $_ into $dir\"",
        "            Copy-Item \"$_\\Far Manager\\*\" \"$dir\" -Recurse -Force",
        "        }",
        "    }",
        "}"
    ],
    "bin": "far.exe",
    "persist": [
        "Profile",
        "Far.exe.ini"
    ],
    "checkver": {
        "github": "https://github.com/FarGroup/FarManager",
        "regex": "/releases/tag/ci/v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv$version/Far.x64.$version.$matchSha.7z"
            },
            "32bit": {
                "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv$version/Far.x86.$version.$matchSha.7z"
            },
            "arm64": {
                "url": "https://github.com/FarGroup/FarManager/releases/download/ci%2Fv$version/Far.ARM64.$version.$matchSha.7z"
            }
        }
    }
}
